function! Formatonsave_clang()
  let l:formatdiff = 1
  py3f /usr/share/clang/clang-format-14/clang-format.py
endfunction
autocmd BufWritePre *.h,*.cc,*.cpp,*.c,*.cu,*.ino,*.vert,*.frag call Formatonsave_clang()

" Added gdb
